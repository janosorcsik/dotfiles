[color]
  ui = always
[color "branch"]
  current = yellow reverse
  local = yellow
  remote = green
[color "diff"]
  meta = yellow bold
  commit = green bold
  frag = magenta bold
  old = red bold
  new = green bold
  whitespace = red reverse
[color "status"]
  added = yellow
  changed = green
  untracked = cyan
[alias]
  s = status -s
  ca = commit -am
  co = checkout
  br = branch -a
  branches = branch -a
  lg = log --color --graph --pretty=format:'%Cred%h%Creset -%C(yellow)%d%Creset %s %Cgreen(%cr) %C(bold blue)<%an>%Creset' --abbrev-commit --
  df = diff --color --color-words --abbrev
  purge = "!f() { \
      declare tmp_dir=$(mktemp -d); \
      git clean -fdxn | sed -n s'/^Would remove \\(.*\\)/\\1/p' | xargs -I % mv \"%\" \"$tmp_dir\"; \
      (rm -rf \"$tmp_dir\" &); \
  }; f"
[apply]
  whitespace = fix
[core]
  pager = diff-so-fancy | less --tabs=4 -RFX
  trustctime = false
  precomposeunicode = false
  untrackedCache = true
  whitespace = space-before-tab,-indent-with-non-tab,trailing-space
[push]
  default = matching
  followTags = true
[credential]
  helper = osxkeychain
[help]
  autocorrect = 1
[fetch]
  prune = true
[diff]
  compactionHeuristic = true
  renames = copies
[merge]
  log = true
